<div class="container">
<div class="row justify-content-center">
<div class="col-lg-5">
<div class="card shadow-lg border-0 rounded-lg mt-5">
<div class="card-header">
<h1>Create Poll</h1>
</div>
<div class="card-body">
<%= form_with model: @polldetail do |form| %>
  <div class="form-outline mb-4">
 <%= form.collection_select(:Candidate_id, @candidates, :id, :candidate_fname, 
    { prompt: 'Select a candidate' }, { id: 'candidate_select',class: 'form-select' }) %>
    </div>
      <div class="form-outline mb-4">
      <%= form.label :" #{@pollquestion.poll_question}" , class:"form-label" %>
    <% @pollquestion.polloptions.each do |o| %>
      <br><%= radio_button_tag  'option_id', o.id %>
      <%= o.poll_option.humanize %>
    <% end %>
      </div>
        <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
