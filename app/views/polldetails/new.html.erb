<div class="container">
<div class="row justify-content-center">
<div class="col-lg-5">
<div class="card shadow-lg border-0 rounded-lg mt-5">
<div class="card-header">
<h3>Create Poll</h3>
</div>
<div class="card-body">
<%= form_with model: @polldetail do |form| %>
  <div class="form-outline mb-4">
 <%= form.collection_select(:Candidate_id, @candidates, :id, :candidate_fname, 
    { prompt: 'Select a candidate' }, { id: 'candidate_select',class: 'form-select' }) %>
    <% @polldetail.errors.full_messages_for(:Candidate_id).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
    </div>
      <div class="form-outline mb-4">
      <%= form.label :" #{@pollquestion.poll_question}" , class:"form-label" %>
    <% @pollquestion.polloptions.each do |o| %>
      <br><%= form.radio_button('Polloption_id', o.id) %>
      <%= o.poll_option.humanize %>
    <% end %>
     <% @polldetail.errors.full_messages_for(:Polloption_id).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
      </div>
        <div>
    <%= form.submit "Create" ,class:"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
